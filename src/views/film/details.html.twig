{% extends 'base.html.twig' %}

{% block title %}Détails du film{% endblock %}

{% block content %}
    <h2 class="mb-4">
        <i class="fas fa-info-circle" aria-hidden="true"></i> Détails du film: {{ film.title }}
    </h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Titre: {{ film.title }}</h5>
            <p class="card-text"><strong>Année:</strong> {{ film.year }}</p>
            <p class="card-text"><strong>Type:</strong> {{ film.type }}</p>
            <p class="card-text"><strong>Réalisateur:</strong> {{ film.director }}</p>
            <p class="card-text"><strong>Synopsis:</strong> {{ film.synopsis }}</p>
            <p class="card-text"><strong>Date de création:</strong> {{ film.createdAt.format('d/m/Y H:i') }}</p>
            <p class="card-text"><strong>Dernière modification:</strong> {{ film.updatedAt.format('d/m/Y H:i') }}</p>

            <a href="/film/list" class="btn btn-primary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
