{% extends 'base.html.twig' %}

{% block title %}Création d'un film{% endblock %}

{% block content %}
    <!-- add Bootstrap --> 
    <h2 class="mb-4">
        <i class="fas fa-list" aria-hidden="true"></i> Création d'un film
    </h2>

    {% if message %}
    <p style="color: green;">{{ message }}</p>
    {% endif %}
    <form action="/add_movie" method="POST">
        <label for="title">Titre :</label>
        <input type="text" id="title" name="title" required><br>
        <label for="year">Année de sortie :</label>
        <input type="number" id="year" name="year" min="1900" max="2025"><br>
        <label for="type">Type :</label>
        <select id="type" name="type" required>
            <option value="">--Sélectionnez--</option>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drame">Drame</option>
            <option value="Horreur">Horreur</option>
            <option value="Crime">Crime</option>
            <option value="Sci-Fi">Sci-Fi</option>
            <option value="Fantasy">Fantasy</option>
        </select><br>
        <label for="synopsis">Synopsis :</label>
        <textarea id="synopsis" name="synopsis" rows="5"></textarea><br>
        <label for="director">Réalisateur :</label>
        <input type="text" id="director" name="director"><br>
        <label for="deleted_at">Date de suppression :</label>
        <input type="datetime-local" id="deleted_at" name="deleted_at"><br>
        <button type="submit">Ajouter le film</button>
    </form>

{% endblock %}
